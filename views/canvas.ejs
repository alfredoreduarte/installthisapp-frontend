<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title><%= module %></title>
</head>
<body>
	<!-- <div id="root"></div> -->
	<!-- <script src="/static/common.js"></script> -->
	<!-- <script src="/static/<%= module %>.bundle.js"></script> -->

	<h1><%= module %> Canvas</h1>
	<button onclick="javascript:login()">Login</button>

	<script type="text/javascript" src="/node_modules/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="/node_modules/js-cookie/src/js.cookie.js"></script>
	<script>
		var saveCookie = function(name, value){
			Cookies.set(name, value);
		}

		var login = function(){
			FB.login(function(response) {
				console.log(response)
				$.ajax({
					type: "POST",
					url: 'https://local.installthisapp.com/users.json',
					data: {
						signed_request: response.authResponse.signedRequest,
						checksum: '<%= checksum %>'
					},
					success: function(res){
						console.log('res', res)
						// saveCookie('api_key', res)
						// console.log(res)
						// top.location = 'http://installthisapp.local:4000/'
					},
					dataType: 'text'
				});
				if (response.authResponse) {
					console.log('Welcome!  Fetching your information.... ');
					FB.api('/me', function(response) {
						console.log('Good to see you, ' + response.name + '.');
					});
				} else {
					console.log('User cancelled login or did not fully authorize.');
				}
			});
		}

		window.fbAsyncInit = function() {
			FB.init({
				appId      : '<%= facebookAppId %>',
				xfbml      : true,
				version    : 'v2.6'
			});
		};

		(function(d, s, id){
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) {return;}
		js = d.createElement(s); js.id = id;
		js.src = "//connect.facebook.net/en_US/sdk.js";
		fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	</script>
</body>
</html>