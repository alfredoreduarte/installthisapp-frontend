<body id="login" class="new_teal mcd bg-login !padding-top--lv0 selfclear overflow-auto">
	<div class="line flex">
		<div class="unit padding--lv3 !padding-top-bottom--lv0 padding--lv0@phone flex-col full-width-mobile full-width-legacy-ie size1of3">
			<div class="c-loginContainer flex-auto padding--lv5 !padding-left-right--lv0 !padding-bottom--lv0 margin--lv5 !margin-left-right--lv0 !margin-bottom--lv0 padding--lv0@xltablet margin--lv0@xltablet" id="login-box">
				<div id="content" class="!margin-bottom--lv8">
					<div id="login-form-wrap" class="mc-mini-content centered padding--lv1">
						<div class="alignc margin--lv5 !margin-left-right--lv0 !margin-bottom--lv2">
							<div class="freddie freddie--login centered" style="display: flex;justify-content: center;align-items: center;">
								<a href="/signup" title="PipeLead">
									<img src="<%= cloudFrontUrl %>/public/pipelead/images/logo-rombo-100.png" />
								</a>
							</div>
						</div>
						<div class="lastUnit size1of1 overflow-visible flex-shrink-none">
							<div id="av-flash-block" class="c-flashBlock"> </div>
						</div>
						<div id="login-content" class="line selfclear !margin-bottom--lv6">
							<div class="lastUnit overflow-visible">
								<form action="https://login.mailchimp.com/login/post/" id="login-form" class="c-largeForm">
									<div class="!margin-bottom--lv5">
										<h1 class="text-align--center !margin-bottom--lv3">Log In</h1>
										<p class="flex align-items--baseline flex-wrap--wrap"> <span class="padding-right--lv1">Need a new account? </span> <a href="/signup" title="Login to your PipeLead account"> Create an account </a> </p>
									</div>
									<fieldset>
										<div class="line login-field">
											<div class="field-wrapper">
												<label for="username" class="">Email</label>
												<input type="text" name="username" id="email" tabindex="1" autofocus="autofocus" autocorrect="off" autocapitalize="off" class=" av-text" value="">
											</div>
										</div>
										<div class="line">
											<label for="password" class="float-left ">Password</label>
										</div>
										<div class="line !margin-bottom--lv3">
											<input type="password" name="password" tabindex="2" id="password" maxlength="51" class=" av-password" value="">
										</div>
										<div class="line !margin-bottom--lv5">
											<button type="submit" value="log in" class="button-large button-wide full-width p1 !margin-bottom--lv5" tabindex="3">Log in</button>
										</div>
										<div class="alignc">
											<p class="inline-block margin--lv1 !margin-top-bottom--lv0 !margin-right--lv0"> <a href="/forgot"> Forgot password?</a> </p>
										</div>
									</fieldset>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="hide-print">
				<div class="line nofloat-tablet full-width-mobile !margin-bottom--lv6 mar-lr-auto--tablet mc-mini-content padding--lv1 centered">
					<p class="lastUnit size1of1 small-meta dim6 full-width"> ©2012–2017 <span>All Rights Reserved. <br/> PipeLead® ‒ InstallThisApp®</span></p>
				</div>
			</div>
		</div>
		<div class="lastUnit flex-col overflow-y !padding-left-right--lv0 hide-mobile hide-legacy-ie full-height-vh size2of3 c-billboard__wrapper">
			<div data-mc-el="loginAnnouncementAnimation" class="full-height" style="display: block; opacity: 1; transform: translateY(0px);">
				<div class="c-billboard v_position--top h_position--left">
					<div class="c-billboard__image" style="background-image: url(<%= cloudFrontUrl %>/public/pipelead/images/billboards/flow.gif)"></div>
					<!-- <div class="c-billboard__cta">
						<h2 class="c-billboard__cta__title margin-bottom--lv4" style="color: #092b31;">Here, there, anywhere: Create campaigns with MailChimp’s mobile app. </h2> <a href="https://blog.mailchimp.com/introducing-campaign-creation-in-mailchimps-mobile-app/?utm_source=mailchimp_app&amp;utm_medium=Login&amp;utm_campaign=Introducing%20Campaign%20Creation%20in%20MailChimp%E2%80%99s%20Mobile%20App" class="button c-billboard__cta__button" target="_blank" style="color: #092b31; border-color: #092b31;" role="button" rel="noopener noreferrer">Find Out How</a>
					</div> -->
				</div>
			</div>
		</div>
	</div>
	<script type="text/javascript" src="<%= cloudFrontUrl %>/node_modules/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="<%= cloudFrontUrl %>/node_modules/js-cookie/src/js.cookie.js"></script>
	<script type="text/javascript" src="<%= cloudFrontUrl %>/node_modules/whatwg-fetch/fetch.js"></script>
	<script>
		var appsOrLeadgen = '<%= redirect %>'
		$(document).ready(function(){
			$('#login-form').submit(function(e){
				e.preventDefault()
				var email = $('#email').val()
				var password = $('#password').val()
				if (email && password) {
					$('#login-button').attr('disabled', true)
					$('#login-button').html('Please wait...')
					fetch('<%= apiUrl %>/auth/sign_in.json', {
						method: 'POST',
						headers: {
							'Accept': 'application/json',
							'Content-Type': 'application/json',
						},
						body: JSON.stringify({
							email: email,
							password: password
						})
					})
					.then(response => {
						if (response.ok) {
							Cookies.set('access-token', response.headers.get('access-token'))
							Cookies.set('token-type', response.headers.get('token-type'))
							Cookies.set('client', response.headers.get('client'))
							Cookies.set('uid', response.headers.get('uid'))
						}
						return response.json()
					})
					.then(json => {
						if (json.errors) {
							$('#login-button').attr('disabled', false)
							$('#login-button').html('Login')
							alert(json.errors)
						}
						else{
							// top.location = location.protocol + '//' + 'localhost.ssl:5000' + '/d'
							var confirmSuccessUrl = null
							if (appsOrLeadgen == 'leadgen') {
								confirmSuccessUrl = window.location.protocol + '//' + 'localhost.ssl:5000' + '/d/complete-profile?redirect_uri=' + window.location.protocol + '//' + 'localhost.ssl:5000' + '/leadgen'
							}
							else {
								confirmSuccessUrl = window.location.protocol + '//' + 'localhost.ssl:5000' + '/d/complete-profile?redirect_uri=' + window.location.protocol + '//' + 'localhost.ssl:5000' + '/d'
							}
							top.location = confirmSuccessUrl
						}
					})
					.catch(exception => {
						$('#login-button').attr('disabled', false)
						$('#login-button').html('Login')
						alert('Connection error. Please try again.')
						console.log('parsing failed', exception)
					})
				}
			})
		})
	</script>
	<%- include('../_scripts') %>
	<%- disableSegment  ? include('../_disable-segment') : include('../_segment') %>
	<script type="text/javascript">
		analytics.page('Login')
	</script>
</body>
</html>